@model EatEvals.Models.Review

@{
    ViewData["Title"] = "Delete";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css">
    <title>EatEvals</title>
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color:black;
        }

        .container1 {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        h4 {
            margin-top: 0;
            color: #333;
        }

        hr {
            margin: 20px 0;
            border-color: #ddd;
        }

        label {
            font-weight: bold;
            color: #666;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #007bff;
            text-decoration: none;
        }

        .deleteReviewButton {
            background-color: darkred !important;
            color: white !important;
            padding: 10px !important;
            text-align: center;
            margin-left: 46%;
            margin-top: 20px;
        }
        .deleteHeaderTitle{
            color: #333;
            margin: 10px;
            font-size: 2rem;
        }
    </style>
</head>
<body>
    <div class="headerTitleList">
        <h4 class="deleteHeaderTitle">Delete Review</h4>
</div>
<br />

    <h3 class="text-white">Are you sure you want to delete this Review?</h3>
<div class="text-white">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restaurant)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Food)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Food)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Score)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Score)
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Action("GetImage", new { id = Model.Id })" alt="Image" height="100" />
            
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
            <p>
                <a asp-action="Create" class="btn btn-primary deleteReviewButton">Back to list</a>
            </p>
    </form>
</div>
    <footer class="border-top eatEvalsFooter text-muted">
        <div class="container">
            <p class="navbar-brand margin0">Kashyap Kalathiya Team - EatEvals</p>
        </div>
    </footer>
</body>